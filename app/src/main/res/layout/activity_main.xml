<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@id/unitsMenu2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/border"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:onClick="FtoI"
        android:textAlignment="center"
        android:textSize="22dp"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <TextView
        android:id="@+id/border"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@id/unitsMenu2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="39dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/border"
        android:backgroundTint="#8BEF7D"
        android:minHeight="48dp"
        android:onClick="ItoF"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <TextView
        android:id="@+id/border1"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@id/unitsMenu2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="39dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/border"
        android:minHeight="48dp"
        android:onClick="ItoF"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/output"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="46dp"
        android:layout_marginTop="50.2dp"
        android:layout_below="@id/unitsMenu2"
        android:minHeight="48dp"
        android:onClick="ItoF"
        android:textAlignment="center"
        android:textSize="22dp"
        android:maxLength="9"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/unitsMenu2"
        android:layout_centerHorizontal="true"
        android:text="Swap"
        android:textSize="18dp"
        android:layout_marginTop="140dp"
        android:id="@+id/Swap"
        android:backgroundTint="#15BCAB"/>

    <TextView
        android:id="@+id/unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="13dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/border"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="86dp"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/unitsMenu1"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:background="@drawable/border"
        android:backgroundTint="#ffb"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu1"
        android:layout_alignTop="@id/unitsMenu1"
        android:layout_marginTop="21dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="9.8dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu1"
        android:layout_alignTop="@id/unitsMenu1"
        android:layout_marginTop="22.5dp"
        android:layout_marginRight="16.5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="8dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu1"
        android:layout_alignTop="@id/unitsMenu1"
        android:layout_marginTop="24dp"
        android:layout_marginRight="17.5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu1"
        android:layout_alignTop="@id/unitsMenu1"
        android:layout_marginTop="17dp"
        android:layout_marginRight="13dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#60605F"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignRight="@id/unitsMenu1"
        android:layout_alignTop="@id/unitsMenu1"
        android:layout_marginTop="13.7dp"
        android:layout_marginRight="14dp"/>

    <Spinner
        android:id="@+id/unitsMenu2"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_below="@id/to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/border"
        android:backgroundTint="#ffb"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu2"
        android:layout_alignTop="@id/unitsMenu2"
        android:layout_marginTop="21dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="9.8dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu2"
        android:layout_alignTop="@id/unitsMenu2"
        android:layout_marginTop="22.5dp"
        android:layout_marginRight="16.5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="8dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu2"
        android:layout_alignTop="@id/unitsMenu2"
        android:layout_marginTop="24dp"
        android:layout_marginRight="17.5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:textColor="#60605F"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/unitsMenu2"
        android:layout_marginTop="17dp"
        android:layout_marginRight="13dp"
        android:layout_alignTop="@id/unitsMenu2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#60605F"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignRight="@id/unitsMenu2"
        android:layout_alignTop="@id/unitsMenu2"
        android:layout_marginTop="13.7dp"
        android:layout_marginRight="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:id="@+id/to"
        android:layout_below="@id/unitsMenu1"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@color/black"/>


</RelativeLayout>